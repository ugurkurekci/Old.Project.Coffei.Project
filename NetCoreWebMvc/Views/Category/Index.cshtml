@using Entities
@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common
@using X.PagedList.Mvc.Core.Fluent



@model IPagedList<Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayaout.cshtml";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />


<a href="/Category/Add" class="btn btn-info">Yeni Kategori</a>
<br />
<br />
<hr />
<h3>KATEGORİ LİSTESİ</h3>
<hr />


<div>

</div>

<section class="content">
    <div class="container-fluid">
        <h2 class="text-center display-4">Search</h2>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <form asp-action="Index" formmethod="get">

                    <div class="input-group">
                        <input type="text" name="searching" id="searching" class="form-control" />
                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-lg btn-default">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>




<div id="jsGrid1" class="jsgrid" style="position: relative; height: 100%; width: 100%;">
    <div class="jsgrid-grid-header jsgrid-header-scrollbar">
       
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id </th>
                    <th>Ad</th>
                    <th>Durum</th>
                    <th>Güncelle</th>
                    <th>Sil</th>
                </tr>
            </thead>
            <tbody>

                @if (Model.Count() == 0)
                {
                    <tr>
                        <td colspan="3" style="color:red">Veri yok</td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.id</td>
                            <td>@item.categoryName</td>
                            <td>@item.isActive</td>
                            <td><a href="/Category/Update/@item.id" class="btn btn-warning">Güncelle</a></td>
                            <td><a href="/Category/Deleted/@item.id" class="btn btn-danger">Sil</a></td>
                        </tr>
                    }
                }

            </tbody>
        </table>

        <br />

    </div>
    <br />
    <br />

    <div class="pull-right">
        @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }),
        new PagedListRenderOptions
        {
        LiElementClasses = new string[] { "page-item" },
        PageClasses = new string[] { "page-link" },
        Display = PagedListDisplayMode.IfNeeded

        })
    </div>

</div>






