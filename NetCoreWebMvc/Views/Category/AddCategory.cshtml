@model Entities.Category

@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayaout.cshtml";
}

<h1>Kategori Ekle</h1>
<br />
<br />



<form asp-action="Added" formmethod="post" id="btn-1">

    <div class="form-group" asp-validation-summary="All">
        <label for="inputName">Kategori Adı</label>
        
        <input asp-for="categoryName"  type="text" id="inputText" class="form-control" required/>
        <span asp-validation-for="categoryName" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label for="horns">Kategori Durum</label>
        <input asp-for="isActive" type="checkbox" name="isActive" checked="checked" value="True" />
        <span asp-validation-for="isActive" class="text-danger"></span>


    </div>
    <div class="form-group" id="btn-1">
        <input type="submit" class="btn btn-primary" id="btn-1" value="Gönder">

    </div>

</form>


<div class="form-group">


    <a href="/Category/Index" class="btn btn-info">Listeye Geri Dön</a>


</div>





