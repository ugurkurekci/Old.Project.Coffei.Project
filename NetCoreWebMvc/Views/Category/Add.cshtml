@model Entities.Category

@{

    ViewData["Title"] = "Kategori Ekleme Paneli";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="modal modal-backdrop" id="idLoading">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content">
            <div class="modal-body">
                <div class="text-center">
                    <div class="spinner-border" style="width: 3rem; height: 3rem;" role="status">
                        <span class="sr-only"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>



<h1>Kategori Ekle</h1>



<form name="Add" method="post">

    <div class="form-group">
        <label for="inputName">Kategori Adı</label>

        <input asp-for="categoryName" type="text" id="inputText" class="form-control" required />
        <span asp-validation-for="categoryName" class="text-danger" data-minlength="2"></span>



    </div>
    <div class="form-group">
        <label for="horns">Kategori Durum</label>
        <input asp-for="isActive" type="checkbox" id="checkbox" name="isActive" checked="checked" value="True" />
        <span asp-validation-for="isActive" class="text-danger"></span>


    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Gönder" id="AddSubmit">

    </div>

</form>

<div class="form-group">

    <a href="/Category/Index" class="btn btn-info">Listeye Geri Dön</a>

</div>


<script src="~/lib/jquery/jquery.js"></script>




<script type="text/javascript">
    $(document).ready(function () {
        $('#idLoading').modal('show')
        setTimeout(function () {
            $('#idLoading').modal('hide')

        }, 1000)
    });

</script>


<script type="text/javascript">
    $(document).ready(function () {
        $("#AddSubmit").click(function () {
            AddSubmit();
        });
    });
    function AddSubmit() {
        if (document.getElementById("inputText").value == "" ) {

            toastr.error("Kategori Eklenmedi", "Başarısız"), 2500;
        }
        else if (document.getElementById("checkbox").value == "") {
            toastr.error("Kategori Eklenmedi", "Başarısız"), 2500;
        }

        else {
            toastr.success("Kategori Eklendi", "Başarılı"), 3000;
        }
    }
</script>

