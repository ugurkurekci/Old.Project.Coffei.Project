@model Entities.Category

@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Shared/_AdminLayaout.cshtml";
}

<h1>Kategori Güncelle</h1>
<br />
<br />



<form asp-controller="Category" asp-action="Updated" asp-route-id="id">


    <div class="form-group">
        <label for="inputName">Kategori ID</label>
        <input asp-for="id" type="number" class="form-control" disabled  />
        <span asp-validation-for="id" class="text-danger"></span>

    </div>



    <div class="form-group">
        <label for="inputName">Kategori Adı</label>
        <input asp-for="categoryName" type="text" id="inputText" class="form-control"  required/>
        <span asp-validation-for="categoryName" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label for="horns">Kategori Durum</label>
        <input asp-for="isActive" type="checkbox" name="isActive" checked="checked" value="True" />
        <span asp-validation-for="isActive" class="text-danger"></span>


    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Gönder">

    </div>

</form>


<div class="form-group">


    <a href="/Category/Index" class="btn btn-info">Listeye Geri Dön</a>


</div>