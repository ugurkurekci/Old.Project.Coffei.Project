@model Entities.Company

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="alert alert-info">Firma Ekle</h1>


@using (Html.BeginForm("Add", "Company", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Firma Adı")
        @Html.TextBoxFor(c => c.companyName, new { @class = "form-control" })
        @Html.ValidationMessageFor(t => t.companyName, String.Empty, new { @style = "color:red;!important" })
        <br />     
        <br />

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Gönder">
        </div>
    </div>

}
<div class="form-group">
    <a href="/Company/Index" class="btn btn-info">Listeye Geri Dön</a>
</div>

