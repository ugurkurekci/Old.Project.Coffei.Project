@model Entities.Company

@{
    ViewData["Title"] = "Firma Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Firma Güncelle</h1>
<br />
<br />



<form asp-action="Updated" formmethod="post">


    <div class="form-group" asp-validation-summary="All">
        <label for="inputName">Kategori ID</label>
        <input asp-for="id" type="number" class="form-control" />
        <span asp-validation-for="id" class="text-danger"></span>

    </div>



    <div class="form-group">
        <label for="inputName">Kategori Adı</label>
        <input asp-for="companyName" type="text" id="inputText" class="form-control" required />
        <span asp-validation-for="companyName" class="text-danger"></span>

    </div>
   





    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Gönder">

    </div>

</form>


<div class="form-group">


    <a href="/Category/Index" class="btn btn-info">Listeye Geri Dön</a>


</div>